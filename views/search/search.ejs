                                                        <a
                                                            href="/singleProduct/<%= data.customer_product_master_id %>/<%= data.product_id %>">
                                                            <!-- Check if the image URL exists -->
                                                            <% if (data.image) { %>
                                                                <!-- If the image URL exists but the image couldn't be found (404 Not Found), render a placeholder image -->
                                                                <img src="https://shopmefast.com/images/product-no-image.jpg"
                                                                    class="img-fluid blur-up lazyload" alt="">
                                                                <% } else { %>
                                                                    <!-- If the image URL doesn't exist, render an alternative content or handle the absence of image as per your requirement -->
                                                                    <img src="https://shopmefast.com/images/product-no-image.jpg"
                                                                        class="img-fluid blur-up lazyload" alt="">
                                                                    <% } %>
                                                        </a>
                                                        <% } %>





                                            </div>
                                        </div>
                                        <div class="product-footer">
                                            <div class="product-detail">
                                                <a
                                                    href="/singleProduct/<%= data.customer_product_master_id %>/<%= data.product_id %>">
                                                    <h5 class="name">
                                                        <%= data.name %>
                                                    </h5>
                                                </a>
                                                <p class="text-content mt-1 mb-2 product-content">
                                                    <%= data.description %>
                                                </p>
                                                <h6 class="unit">
                                                    <%= data.item_code %>
                                                </h6>
                                                <h5 class="price"><span class="theme-color">AED: <span id="price">
                                                            <%= data.gross_price %>
                                                        </span></span></h5>


                                                <!-- Form for adding to cart -->
                                                <form action="#" method="post" class="cartForm"
                                                    data-product-id="<%= data.product_id %>">

                                                    <input type="hidden" name="product_id"
                                                        value="<%= data.product_id %>">

                                                    <select class="form-select select-form-size mt-2"
                                                        name="primary_uom_code">
                                                        <% data.uom_details.forEach((uom, index)=> { %>
                                                            <option value="<%= uom.id %>" <% if (index===0) { %>
                                                                selected<% } %>>
                                                                    <%= uom.uom_code %>
                                                            </option>
                                                            <% }) %>



                                                    </select>


                                                    <div class="add-to-cart-box bg-white">
                                                        <button type="submit"
                                                            class="btn btn-add-cart theme-bg-color text-white addcart-button">Add
                                                            <span class="add-icon bg-light-gray">
                                                                <i class="fa-solid fa-plus"></i>
                                                            </span>
                                                        </button>
                                                        <div class="cart_qty qty-box">


                                                            <div class="input-group bg-white">
                                                                <button type="submit" class="qty-left-minus bg-gray"
                                                                    data-type="minus" data-field="">
                                                                    <i class="fa fa-minus"></i>
                                                                </button>
                                                                <input class="form-control input-number qty-input"
                                                                    type="text" name="quantity" value="0">


                                                                <button type="submit" class="qty-right-plus bg-gray"
                                                                    data-type="plus" data-field="">
                                                                    <i class="fa fa-plus"></i>
                                                                </button>
                                                            </div>


                                                        </div>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <% }) %>
                                    <% } else { %>
                                        <p>No products found.</p>
                                        <% } %>

                    </div>


                </div>
            </div>
        </div>
    </section>
    <!-- Search Bar Section End -->






